@model List<Zuper_Mart.Models.Product>
@{
    ViewBag.Title = "ExclusiveProducts";
}
<!--Page Content-->
<!--Banner-->
<div class="container-fluid p-0 pb-1 col-lg-12" id="exclBanner">
    <div class="bannerText ">
        <textbox>Exclusive</textbox>
    </div>

    <img src="~/images/exclusive/bg.jpg"> <!--img from pngtree.com-->
</div>
<!--Banner ends-->
<!--cards Exclusive products-->
<div class="container text-center" id="cards">
    <div class="row justify-content-center" id="card-id">

        <div class="section-heading">
            <h2>Exclusive Products</h2>
        </div>

        @{
            foreach (var item in Model)
            {
                if (item.Sale == 0)
                {
                    <div class="col-lg-4 col-md-6 mb-2">
                        <div class="card" style="width: 18rem;">
                            <img src="~/images/products/@item.PrdImgUrl" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@item.Price</h5>
                                <p class="card-text">@item.PName</p>
                                <a href="/Home/ProductPreview/@item.ProductID" class="stretched-link" target="_blank"></a>
                            </div>
                        </div>
                    </div>
                }
            }
        }


    </div> <!--Row div end-->
</div> <!--cards container div end-->
<!--cards end here-->
<!--cards: On Sale products-->
<div class="container text-center" id="cards">
    <div class="row justify-content-center" id="card-id">

        <div class="section-heading">
            <h2>On Sale</h2>
        </div>
        @{ 
            foreach (var item in Model)
            {
                if (@item.Sale > 0)
                {
                <div class="col-lg-4 col-md-6">
                    <div class="card" style="width: 18rem;">
                        <img src="~/images/products/@item.PrdImgUrl" class="card-img-top" alt="...">
                        <div class="card-img-overlay">
                            <h5 class="card-title" id="discount" style="text-align: left; color: green">@item.Sale%</h5>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">tk @item.Price</h5>
                            <p class="card-text">@item.PName</p>
                            <a href="/Home/ProductPreview/@item.ProductID" class="stretched-link" target="_blank"></a>
                        </div>
                    </div>
                </div>
                }
            }
        }

    </div> <!--Row div end-->
</div> <!--cards container div end-->
<!--cards end here-->
<!--Page Content ends here-->
