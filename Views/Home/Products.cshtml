@model List<Zuper_Mart.Models.Product>
@{
    ViewBag.Title = "Products";
}

<!--Page Content-->
<!--Product page Navbar-->
<nav class="navbar navbar-expand-sm navbar-light bg-dark" id="productsNav">
    <div class="container">

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto m-2 mb-lg-0">
                <li class="nav-item dropend text-white">
                    <form class="d-flex" action="/Home/Filter" method="POST">
                        <select class="form-select" aria-label="Default select example" name="filter">
                            <option selected>Select</option>
                            <option value="Casual Shirt">Casual Shirt</option>
                            <option value="Polo Tshirt">Polo Tshirt</option>
                            <option value="Casual Pants">Casual Pants</option>
                            <option value="Formal Pants">Formal Pants</option>
                        </select>

                        <button type="submit" class="btn btn-outline-light">Filter</button>
                    </form>
                </li>

            </ul>
            <form class="d-flex" action="/Home/Products" method="post">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="PName">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>

<!--Product page Navbar ends-->
<!--cards-->
<div class="container text-center" id="cards">
    <div class="row justify-content-center" id="card-id">
        @{
            if (@TempData["filter"] != null)
            {
                foreach (var item in Model)
                {
                    if (@TempData["filter"].ToString() == "Select" || @TempData["filter"].ToString() == null)
                    {
                        <div class="col-lg-4 col-md-6 mb-2">
                            <div class="card" style="width: 18rem;">
                                <img src="~/images/products/@item.PrdImgUrl" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Price</h5>
                                    <p class="card-text">@item.PName</p>
                                    <a href="product-preview.html" class="stretched-link" target="_blank"></a>
                                </div>
                            </div>
                        </div>
                    }
                    if (@TempData["filter"].ToString() == @item.PType)
                    {
                        <div class="col-lg-4 col-md-6 mb-2">
                            <div class="card" style="width: 18rem;">
                                <img src="~/images/products/@item.PrdImgUrl" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Price</h5>
                                    <p class="card-text">@item.PName</p>
                                    <a href="product-preview.html" class="stretched-link" target="_blank"></a>
                                </div>
                            </div>
                        </div>
                    }

                }
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-2">
                        <div class="card" style="width: 18rem;">
                            <img src="~/images/products/@item.PrdImgUrl" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@item.Price</h5>
                                <p class="card-text">@item.PName</p>
                                <a href="product-preview.html" class="stretched-link" target="_blank"></a>
                            </div>
                        </div>
                    </div>
                }
            }

        }


    </div> <!--Row div end-->
</div> <!--cards container div end-->
<!--cards end here-->
